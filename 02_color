//volevo creare una scacchiera formata da 5 rettangoli che cambiassero colore 
// a seconda del movimento del mouse

int stepX;
int stepY;


void setup() {
  size(720, 720);
  noCursor();
}


void draw() {

  colorMode(HSB, 360, 100, 100); //modalit√† colore HSB
 rectMode(CENTER); 
  noStroke();
  background(mouseY/2, mouseX/2, random (HSB)); // lo sfondo dipende dal movimento dello mouse sull'asse x e y e il valore random hsb
  

  stepX = mouseX+2;
  stepY = mouseY+2;
  for (int gridY=0; gridY<height; gridY+=stepY){
    for (int gridX=0; gridX<width; gridX+=stepX){
      
      fill(gridX, height-gridY, 100);
   
  rect(360, 360, mouseX+1, mouseX+1);
  rect(200,200,mouseX+1, mouseX+1);
  rect(520,200,mouseX+1, mouseX+1);
  rect(200,520,mouseX+1, mouseX+1);
  rect(520,520,mouseX+1, mouseX+1);
  
  //disegno di 5 rettangoli in base alla posizione x e y il movimento del mouse sull'asse x e y +1
  }
}

}
 
