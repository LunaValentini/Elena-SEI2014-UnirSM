float tileCount = 40; // all'interno della finestra sono presenti 40 tasselli
color col = color(random (0),100,250,100); // colore
int circle = 90; //grandezza cerchio
int actRandomSeed = (0);

void setup(){
  size(600, 600);
}

void draw() {

  translate(width/tileCount, height/tileCount);  

  background(actRandomSeed);
  smooth();
  noFill();
  
  randomSeed(actRandomSeed);

  stroke(col, circle); 
  strokeWeight(mouseY/120); //lo spessore della forma dipende dal movimento del mouse sull'asse Y

  for (int gridY=0; gridY<tileCount; gridY++) {
    for (int gridX=0; gridX<tileCount; gridX++) {

      float posX = width/tileCount * gridX;
      float posY = height/tileCount * gridY;

      float shiftX = random(-mouseX, mouseX)/40;
      float shiftY = random(-mouseX, mouseX)/40;

      ellipse(posX+shiftX, posY+shiftY, mouseY/15, mouseY/15);
    }
  }
}

void mousePressed() {
  actRandomSeed = (int) random(100000);


}
